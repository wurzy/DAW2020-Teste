extends layout

block content
  .w3-card-4
    .w3-container.w3-blue
        h1 Código da classe: #{dados.codigo}
    p(style="text-indent: 20px")
       a(href="/") Back  
    ul.w3-ul
     li 
      b Nível: 
      | #{dados.nivel}
     li 
      b Título: 
      | #{dados.titulo}
     li 
      b Descrição: 
      | #{dados.descricao}
     li
      b Estado: 
      |  #{dados.status}

    .w3-card-4
     .w3-container.w3-blue
      h1 Descendência da classe
    if dados.filhos.length > 0
     table.w3-table-all
      tr
        th Código
        th Título  
      each filho in dados.filhos
        tr
          td
            a(href='/codigo/' + filho.codigo)= filho.codigo
          td= filho.titulo
    else 
     ul.w3-ul
      li Não existente.

    if dados.nivel == 3
     .w3-card-4
      .w3-container.w3-blue
       h1 Termos de Índice
     table.w3-table-all
      tr
       th Identificador
       th Termo 
      each proc in dados.termosInd
         tr
          td
           a(href='/termos/')= proc.idTI
          td= proc.termo

  .w3-container.w3-blue
